{
  "name": "plotit-server",
  "version": "1.0.1",
  "type": "module",
  "description": "A production-ready Express.js template with TypeScript, Drizzle ORM, and JWT Authentication",
  "main": "dist/server.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run lint && npm run compile",
    "compile": "tsc",
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:pull": "drizzle-kit pull",
    "docs:build": "redocly bundle docs/openapi.yaml --output dist/openapi.json"
  },
  "keywords": [
    "express",
    "typescript",
    "drizzle",
    "postgresql",
    "authentication",
    "jwt",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.38.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@redocly/cli": "^2.20.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^9.0.8",
    "@vitest/ui": "^3.2.4",
    "bcrypt": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^3.2.4"
  }
}
